@model MvcFirmaCagri.Models.Entity.TblCalls
@{
    ViewBag.Title = "NewCall";
    Layout = "~/Views/Shared/FirmLayout.cshtml";
}

<h2>Yeni Çağrı Ekleme Sayfası</h2>
<br />
<form method="post">
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Issue, new {@class = "form-control"})
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Çağrı Oluştur</button>
</form>

