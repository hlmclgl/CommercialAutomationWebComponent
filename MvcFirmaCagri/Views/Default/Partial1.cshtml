@using MvcFirmaCagri.Models.Entity
@model List<TblMessages>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-comment-o"></i><span class="badge blue">@ViewBag.m</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>@ViewBag.m yeni mesajınız var</h3>
            </div>
        </li>
        @foreach (var x in Model)
        {
            <li>
                <a href="#" class="grid">
                    <div class="user_img"><img src="~/web2/starter/assets/images/avatar1.jpg" alt=""></div>
                    <div class="notification_desc">
                        <p>@x.Sender</p>
                        <span>@x.Issue</span>
                    </div>
                </a>
            </li>
        }

        <li>
            <div class="notification_bottom">
                <a href="/Default/" class="bg-primary">Tüm mesajları gör.</a>
            </div>
        </li>
    </ul>
</li>
